<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class-"lead">
                YelpCamp
            </p>
            <div class="list-group">
                <li class="list-group-item active">Info</li>
                <li class="list-group-item">Info</li>
                <li class="list-group-item">Info</li>
            </div>
        </div>
        
        <div class= " col-md-9">
            <div class="img-thumbnail">
                <img class="img-fluid rounded mx-auto d-block" src="<%= campground.image %>">
                <div class="p-3">
                    <h4 class="float-right">$9.00</h4>
                    <a href=""><h4><%= campground.name %></h4></a>
                    <p><%= campground.description %></p>
                </div>
            </div>  
            <div class="card card-body mt-4" style="background-color:lightgrey;">
                <div class="float-right">
                    <a class="btn btn-primary float-right" href="/campgrounds/<%= campground._id%>/comments/new">Add new Comment</a>
                </div >
                <hr>
                <% campground.comments.forEach(function(comm){ %>
                    <div class="row">
                        <div class="col-md-12">
                             <strong><%=  comm.author %></strong>
                             <span class="float-right">10 days ago</span>
                             <p>
                                 <%= comm.text%> </p>
                             </p>
                        </div>
                    </div>
                 <% }) %>
                
                    
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>