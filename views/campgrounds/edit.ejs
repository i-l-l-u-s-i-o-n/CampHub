<% include ../partials/header %>
    
    
    
    <div class="container">
        <h1 style="text-align:center;margin-bottom:30px;">Add a new Campground</h1>
        <div style="width: 40%; margin:0 auto;">
        <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
            
            <div class="form-group">
            <input class="form-control" type="text" name="campground[name]" value="<%= camp.name%>"/>
            </div>
            <div class="form-group">
            <input class="form-control" type="number" name="campground[price]" value="<%= camp.price%>" min="0.01" step= "0.01"/>
            </div>
            <div class="form-group">
            <input class="form-control" type="text" name="campground[url]" value="<%= camp.image%>"/>
            </div>
            <div class="form-group">
            <input class="form-control" type="text" name="campground[description]"  value="<%= camp.description %>"/>
            </div>
            <div class="form-group">
            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Update"/>
            </div>
            
        </form>
        
            <a href="/campgrounds">Go Back</a>
        </div>
        
    </div>
   
    
<% include ../partials/footer %>

