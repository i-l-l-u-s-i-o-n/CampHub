<% include ../partials/header %>
    
    
    <div id="block" class="p-4">
    <div class="container">
        <h3 style="text-align:center;margin-bottom:30px;">Add a new Comment to <%= campground.name %></h3>
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            
            <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="Comment : "/>
            </div>
            <div class="form-group">
            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Add"/>
            </div>
            
        </form>
        
            <a href="/campgrounds">Go Back</a>
        </div>
        
    </div>
   
    
<% include ../partials/footer %>

