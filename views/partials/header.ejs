        <!-- Optional theme -->
        <!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">-->
    
    </head>    
    <body>
        
         
        
        
        <nav class="navbar navbar-light navbar-expand-md sticky-top mb-3 p-4 mt-2 " id="mainNavbar">
            <!--<div class="container">-->
          <a class="navbar-brand" id="brand" href="/campgrounds">  YelpCamp <i class="ml-2 fas fa-campground"></i></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav ">
                
                <li class="nav-item active">
                    <form action="/campgrounds" method="GET" class="form-inline">
                   <div class="form-group">
                       <input type="text" name="search" placeholder="Search..." class="form-control rounded-pill" >
                       
                
                   </div>
           </form>
                </li>
                
                <% if(!currentUser){ %>
                
                    <li class="nav-item active"><a class="nav-link btn  btn-sm rounded-pill mx-2 p-2 text-white"  href="/login">Login<i class="ml-1 fas fa-user-check"></i></a></li>
                    <li class="nav-item active"><a class="nav-link btn  btn-sm rounded-pill p-2 text-white" href="/register">Sign Up<i class=" ml-1 fas fa-user-plus"></i></a></li>
                <%  }else{ %>
                    <li class="nav-item active"><a class="nav-link text-white mx-2">Signed in as <%= currentUser.username %></a></li>
                    <li class="nav-item active"><a class="nav-link btn  btn-sm rounded-pill text-white" href="/logout">Logout  <i class="ml-2 fas fa-sign-out-alt"></i></a></li>
                <%  }  %>
            </ul>
           </div>
           <!--</div>-->
        </nav>
        
        <% if(error && error.length >0 ){%>
        <div class="container">
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        </div>
        <% } %>
        <% if(success && success.length >0) {%>
        <div class="container">
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        </div>
        <% } %>
        
    
        
        
        
